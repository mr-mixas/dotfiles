[user]
    name = Michael Samoglyadov
    email = mixas.sr@gmail.com

[core]
    pager =

[alias]
    co = checkout
    st = status --short --branch
    ci = commit
    br = branch
    lf = log --follow
    lo = log --follow --oneline

[push]
    default = simple

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
